<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MapPinSample.MainPage">
    <Grid RowDefinitions="auto, *, auto, *" RowSpacing="8" Padding="4">
        <Label Text="Map with Normal Pin" FontAttributes="Bold" Grid.Row="0" />
        <maps:Map x:Name="mapA" Grid.Row="1" />
        <Label Text="Map with Custom Pin" FontAttributes="Bold" Grid.Row="2" />
        <maps:Map x:Name="mapB" Grid.Row="3" />
    </Grid>
</ContentPage>

